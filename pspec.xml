        <BuildDependencies>
            <Dependency type="pkgconfig">gdk-pixbuf-2.0</Dependency>
            <Dependency type="pkgconfig">atk</Dependency>
            <Dependency type="pkgconfig">pango</Dependency>
            <Dependency type="pkgconfig">cairo</Dependency>
            <Dependency type="pkgconfig">xinerama</Dependency>
            <Dependency type="pkgconfig32">gdk-pixbuf-2.0</Dependency>
            <Dependency type="pkgconfig32">atk</Dependency>
            <Dependency type="pkgconfig32">pango</Dependency>
            <Dependency type="pkgconfig32">cairo</Dependency>
            <Dependency type="pkgconfig32">xinerama</Dependency>
