            <Dependency type="pkgconfig">gtk-doc</Dependency>
            <Dependency>glibc-32bit-devel</Dependency>
            <Dependency>libgcc-32bit</Dependency>
            <Dependency>cups-devel</Dependency>
        </BuildDependencies>

        <Patches>
            <Patch level="1">0001-modules-Use-stateless-configuration-for-im-multipres.patch</Patch>
        </Patches>
    </Source>

    <Package>
        <Name>libgtk-2</Name>
        <Files>
            <Path fileType="executable">/usr/bin/gtk-builder-convert</Path>
            <Path fileType="executable">/usr/bin/gtk-query-immodules-2.0</Path>
            <Path fileType="executable">/usr/bin/gtk-update-icon-cache-2.0</Path>
            <Path fileType="library">/usr/lib64/gtk-2.0</Path>
            <Path fileType="library">/usr/lib64/lib*.so.*</Path>
            <Path fileType="data">/usr/share/gir-1.0</Path>
            <Path fileType="data">/usr/lib64/girepository-1.0</Path>
            <Path fileType="data">/usr/share/glib-2.0</Path>
            <Path fileType="locale">/usr/share/locale</Path>
            <Path fileType="man">/usr/share/man</Path>
            <Path fileType="data">/usr/share/themes</Path>
            <Path fileType="data">/usr/share/gtk-2.0/im-multipress.conf</Path>
        </Files>
        <Provides>
            <COMAR script="package.py">System.Package</COMAR>
        </Provides>
    </Package>

    <Package>
        <Name>libgtk-2-32bit</Name>
        <BuildType>emul32</BuildType>
        <PartOf>emul32</PartOf>
        <Files>
            <Path fileType="library">/usr/lib32/gtk-2.0</Path>
            <Path fileType="library">/usr/lib32/lib*.so.*</Path>
            <Path fileType="data">/usr/lib32/girepository-1.0</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libgtk-2</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>libgtk-2-devel</Name>
        <Summary>Development files for libgtk-2</Summary>
        <Description>Development files for libgtk-2</Description>
        <Files>
            <Path fileType="header">/usr/include</Path>
            <Path fileType="library">/usr/lib64/lib*.so</Path>
            <Path fileType="data">/usr/lib64/pkgconfig</Path>
            <Path fileType="data">/usr/share/aclocal</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libgtk-2-32bit</Dependency>
            <Dependency>libatk-devel</Dependency>
            <Dependency>at-spi2-atk-devel</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>libgtk-2-32bit-devel</Name>
        <Summary>Development files for 32-bit libgtk-2</Summary>
        <Description>Development files for 32-bit libgtk-2</Description>
        <Files>
            <Path fileType="library">/usr/lib32/lib*.so</Path>
            <Path fileType="data">/usr/lib32/pkgconfig</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libgtk-2-32bit</Dependency>
            <Dependency release="current">libgtk-2-devel</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>libgtk-2-docs</Name>
        <Summary>API Documentation for libgtk-2</Summary>
        <Description>API Documentation for libgtk-2</Description>
        <Files>
            <Path fileType="doc">/usr/share/doc</Path>
            <Path fileType="doc">/usr/share/gtk-doc</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libgtk-2</Dependency>
        </RuntimeDependencies>
    </Package>

    <Package>
        <Name>gtk2-demo</Name>
        <Summary>Demonstration of gtk2</Summary>
        <Description>Demonstration of gtk2</Description>
        <IsA>app:gui</IsA>
        <Files>
            <Path fileType="executable">/usr/bin/gtk-demo*</Path>
            <Path fileType="data">/usr/share/gtk-2.0/demo</Path>
        </Files>
        <RuntimeDependencies>
            <Dependency release="current">libgtk-2</Dependency>
        </RuntimeDependencies>

    </Package>

